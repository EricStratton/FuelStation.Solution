@{
  Layout = "_Layout";
}

@using FuelStation.Models;
@model List<FuelStation.Models.Planet>;


<h1>Planets</h1>

@if (@Model.Count == 0)
{
  <h3>No Planets have been added yet!</h3>
} 

@foreach (Planet planet in Model)
{
  <li>@Html.ActionLink($"{planet.Name}", "Details", new { id = planet.PlanetId })</li>
}

<p>@Html.ActionLink("Add new fuel type", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>